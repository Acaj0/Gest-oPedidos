@model IEnumerable<GestaoPedidos.Models.Cliente>

<h1>Clientes</h1>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Novo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = cliente.ClienteId })">Editar</a> |
                    <a href="@Url.Action("Delete", new { id = cliente.ClienteId })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
