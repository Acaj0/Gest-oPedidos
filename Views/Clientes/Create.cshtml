@model GestaoPedidos.Models.Cliente
@{
    ViewData["Title"] = "Criar Cliente";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Space+Grotesk&display=swap"
        rel="stylesheet">
    <style>
        .bg-gradient-red {
            background: linear-gradient(135deg, #501211, #8b1c1d);
            color: white;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .form-control {
            border-radius: 0.375rem;
            border: 1px solid #501211;
        }

        .table thead {
            background: linear-gradient(135deg, #501211, #8b1c1d);
            color: white;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .btn-primary {
            background: linear-gradient(135deg, #8b1c1d, #501211);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #501211, #8b1c1d);
        }

        h1 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: bold;
            color: #501211;
            text-align: center;
            margin-bottom: 2rem;
        }

        .card {
            border: 1px solid #501211;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            color: #501211;
            font-weight: bold;
        }

        .form-group .text-danger {
            font-size: 0.875rem;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="card p-4">
            <h1>Criar Cliente</h1>

            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" id="Nome" class="form-control" required maxlength="100" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email" class="control-label">E-mail</label>
                    <input asp-for="Email" id="Email" class="form-control" type="email" required maxlength="150" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Telefone" class="control-label">Telefone</label>
                    <input asp-for="Telefone" id="Telefone" class="form-control" required maxlength="15"
                        pattern="^\+?[1-9][0-9]{7,14}$" />
                    <small class="form-text text-muted">Exemplo: 11999999999</small>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</body>
