@model GestaoPedidos.Models.Cliente

<h1>Criar Cliente</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" id="Nome" class="form-control" required maxlength="100" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email" class="control-label">E-mail</label>
        <input asp-for="Email" id="Email" class="form-control" type="email" required maxlength="150" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Telefone" class="control-label">Telefone</label>
        <input asp-for="Telefone" id="Telefone" class="form-control" required maxlength="15" pattern="^\+?[1-9][0-9]{7,14}$" />
        <small class="form-text text-muted">Exemplo: +5511999999999</small>
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>