@model IEnumerable<GestaoPedidos.Models.Produto>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Space+Grotesk&display=swap"
        rel="stylesheet">
    <style>
        .bg-gradient-red {
            background: linear-gradient(135deg, #501211, #8b1c1d);
            color: white;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .form-control {
            border-radius: 0.375rem;
            border: 1px solid #501211;
        }

        .table thead {
            background: linear-gradient(135deg, #501211, #8b1c1d);
            color: white;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .btn-primary,
        .btn-warning,
        .btn-danger {
            background: linear-gradient(135deg, #8b1c1d, #501211);
            border: none;
        }

        .btn-warning {
            background: linear-gradient(135deg, #f0ad4e, #ffdba8);
        }

        .btn-primary:hover,
        .btn-danger:hover {
            background: linear-gradient(135deg, #501211, #8b1c1d);
        }

        h1 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: bold;
            color: #501211;
            text-align: center;
            margin-bottom: 2rem;
        }

        .card {
            border: 1px solid #501211;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            color: #501211;
            font-weight: bold;
        }

        .btn-secondary {
            background: #ccc;
            color: #501211;
        }

        .btn-secondary:hover {
            background: #bbb;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="card p-4">
            <h1>Produtos</h1>

            <p>
                <a href="@Url.Action("Create", "Produtos")" class="btn btn-primary">Criar Produto</a>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Preco.ToString("C")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Produtos", new { id = item.ProdutoId })"
                                    class="btn btn-warning">Editar</a>
                                <a href="@Url.Action("Delete", "Produtos", new { id = item.ProdutoId })"
                                    class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
