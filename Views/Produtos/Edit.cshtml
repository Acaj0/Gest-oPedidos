@model GestaoPedidos.Models.Produto
@{
    ViewData["Title"] = "Editar Produtos";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Space+Grotesk&display=swap"
        rel="stylesheet">
    <style>
        .bg-gradient-red {
            background: linear-gradient(135deg, #501211, #8b1c1d);
            color: white;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .form-control {
            border-radius: 0.375rem;
            border: 1px solid #501211;
        }

        .btn-primary {
            background: linear-gradient(135deg, #8b1c1d, #501211);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #501211, #8b1c1d);
        }

        h1 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: bold;
            color: #501211;
            text-align: center;
            margin-bottom: 2rem;
        }

        .card {
            border: 1px solid #501211;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            color: #501211;
            font-weight: bold;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="card p-4">
            <h1>Editar Produto</h1>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="ProdutoId" />

                <div class="form-group">
                    <label for="Nome">Nome</label>
                    <input asp-for="Nome" required maxlength="50" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Preco">Pre√ßo</label>
                    <input asp-for="Preco" required max="9999999" min="0.01" class="form-control" type="number" step="0.01" />
                </div>
                <button type="submit" class="btn btn-primary">Editar Produto</button>
            </form>
        </div>
    </div>
</body>
