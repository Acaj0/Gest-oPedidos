@using GestãoPedidos.Models

@model GestãoPedidos.Models.ErrorViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Erro</title>
</head>
<body>
    <h1>Ocorreu um erro!</h1>
    
    @if (Model.ShowRequestId)
    {
        <p>Request ID: @Model.RequestId</p>
    }
    else
    {
        <p>Nenhuma informação de ID de requisição disponível.</p>
    }

    <p>Por favor, tente novamente ou entre em contato com o suporte se o erro persistir.</p>
</body>
</html>
