<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestãoPedidos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Space+Grotesk&display=swap"
        rel="stylesheet">
    <style>
        .navbar-brand:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;

        }

        .navbar-brand {
            font-family: 'Space Grotesk', sans-serif;

        }

        h4 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: bold;
            text-align: center;
        }

        .bg-gradient-red {
            background: linear-gradient(135deg, #501211, #8b1c1d) !important;
        }
    </style>
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gradient-red border-bottom box-shadow mb-3 ">
            <div class="container">
                <h4 class="text-white fs-1 align-bottom">GestãoPedidos</h4>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Clientes"
                        asp-action="Index">Clientes</a>
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Produtos"
                        asp-action="Index">Produtos</a>
                    <div class="dropdown bg-transparent">
                        <button class="btn navbar-brand btn-large dropdown-toggle fs-5 text-white" type="button"
                            data-bs-toggle="dropdown" aria-expanded="true">
                            Pedidos
                        </button>
                        <ul class="dropdown-menu text-center bg-white p-1">
                            <li><a class="navbar-brand text-center fs-6" asp-area="" asp-controller="Pedidos"
                                    asp-action="Index">Lista</a></li>
                            <li><a class="navbar-brand text-center fs-6" asp-area="" asp-controller="Pedidos"
                                    asp-action="Create">Criar Novo</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mt-5">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
