@model GestaoPedidos.Models.Pedido

@{
    ViewData["Title"] = "Criar Pedido";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Space+Grotesk&display=swap"
        rel="stylesheet">
    <style>
        .bg-gradient-red {
            background: linear-gradient(135deg, #501211, #8b1c1d);
            color: white;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .form-control {
            border-radius: 0.375rem;
            border: 1px solid #501211;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background: linear-gradient(135deg, #8b1c1d, #501211);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #501211, #8b1c1d);
        }

        h1 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: bold;
            color: #501211;
            text-align: center;
            margin-bottom: 2rem;
        }

        .card {
            border: 1px solid #501211;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="card p-4">
            <h1>Criar Pedido</h1>
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label for="ClienteId">Cliente</label>
                    <select asp-for="ClienteId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Clientes, "ClienteId", "Nome"))" required>
                        <option value="">Selecione um cliente</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="ProdutoId">Produto</label>
                    <select asp-for="ProdutoId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Produtos, "ProdutoId", "Nome"))" required>
                        <option value="">Selecione um produto</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="DataPedido">Data do Pedido</label>
                    <input type="date" asp-for="DataPedido" class="form-control"
                        value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="form-group mb-4">
                    <label for="Quantidade">Quantidade</label>
                    <input type="number" asp-for="Quantidade" class="form-control" min="1" max="9999"  required />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4">Criar Pedido</button>
                </div>
            </form>
        </div>
    </div>
</body>
